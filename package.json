{
  "scripts": {
    "dev": "npx tailwindcss --postcss -i ./css/tailwind.css -o ./inc/style.min.css;",
    "watch": "npx tailwindcss --postcss -i ./css/tailwind.css -o ./inc/style.min.css --watch",
    "build": "cross-env NODE_ENV=production TAILWIND_MODE=build postcss css/tailwind.css -o inc/style.min.css --minify --verbose"
  },  
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.7",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24"
  }
}
